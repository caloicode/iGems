<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- <link rel="stylesheet" href="framework.css" /> -->
  <link rel="stylesheet" href="style.css" />
  <!-- <link rel="stylesheet" href="style-2.css" /> -->
  <title>iGems</title>
</head>

<body>
  <div class="container">
    <div class="warningBox">
      <form action="/delete" method="post">
        <p>Are you sure you want to delete this?</p>
        <span>id: </span><input type="number" name="id" id="deleteID">
        <div class="confirmBtnGroup">
          <button type="submit" id="yes" class="confirmBtn">Yes</button>
          <button type="button" id="no" class="confirmBtn">No</button>
        </div>
      </form>
    </div>

    <h1>iGems</h1>

    <button id="addIgemBtn" onclick="toggleAddIgemView()">Add iGems</button>

    <div class="gridBox">
      <div class="dataGrid">
        <div class="line">
          <h3>Category</h3>
          <h3>Task</h3>
          <h3>Status</h3>
          <h3>Earned</h3>
        </div>
        <% dataSamp.map(data => { %>
        <div class="row" id="<%=dataSamp.indexOf(data)%>">
          <div class="line">
            <p><%= data.category %></p>
            <p><%= data.task %></p>
            <p><%= data.status %></p>
            <p><%= data.earned %></p>
          </div>
        </div>
        <% }) %>
      </div>

      <div id="addGrid">
        <form action="/addIgems" method="post" id="addIgems">
          <p>Add</p>
          <% dataSamp.map(data => { %>
          <div class="addGroup">
            <button type="button" onclick="decrement(<%=dataSamp.indexOf(data)%>)">-</button>
            <input name='igems' type="number" class="numberInput" step="0.5" />
            <button type="button" onclick="increment(<%=dataSamp.indexOf(data)%>)">+</button>
          </div>
          <% }) %>
      </div>

      <div class="optionGrid">
        <p>Options</p>
        <% dataSamp.map(data => { %>
        <div class="optionBox" id="optionBox_<%= dataSamp.indexOf(data) %>">
          <button type="button" id="editBtn_<%= dataSamp.indexOf(data) %>"
            onclick="editRow(<%= dataSamp.indexOf(data) %>)">Edit</button>
          <button type="button" data-deleteID="<%=data.id%>" id="deleteBtn_<%= dataSamp.indexOf(data) %>"
            onclick="deleteRow(<%= dataSamp.indexOf(data) %>)">Delete</button>
        </div>
        <% }) %>
      </div>
    </div>
    <button type="submit" id="saveIgemsBtn" class="hidden save">Save</button>
    </form>

    <button id="addBtn" onclick="toggleHiddenDiv()">Add Gaim</button>

    <div class="hidden" id="addBox">
      <form action="/addGaim" method="post" id="addForm">
        <input name="category" type="text" placeholder="Category" />
        <input name="task" type="text" placeholder="Task" />
        <select name="status" id="statusSelect">
          <option value="On-Going" selected>On-going</option>
          <option value="Pending">Pending</option>
          <option value="Completed">Completed</option>
        </select>
        <input name="earned" type="text" placeholder="Earned" />

        <button class="save" type="submit">Save</button>
      </form>
    </div>
  </div>
  <script src="./script.js"></script>
</body>

</html>