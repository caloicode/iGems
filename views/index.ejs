<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <link rel="stylesheet" href="framework.css" /> -->
    <link rel="stylesheet" href="style.css" />
    <title>iGems</title>
  </head>

  <body>
    <div class="container">
    <h1>iGems</h1>

    <button id="addIgemBtn" onclick="toggleCell()">Add iGems</button>

    <form action="/addIgems" method="post" id="addIgems">
      <div class="tableBox">
      <table>
        <tr>
          <th>Category</th>
          <th>Task</th>
          <th>Status</th>
          <th>Earned</th>
          <th class="hiddenCell">Add</th>
        </tr>
        <% dataSamp.map(data => { %>
        <tr class="row" id=<%=dataSamp.indexOf(data)%>>
          <td contenteditable="false"><%= data.category %></td>
          <td contenteditable="false"><%= data.task %></td>
          <td contenteditable="false"><%= data.status %></td>
          <td contenteditable="false"><%= data.earned %></td>
          <td class="hiddenCell" data-key=<%=dataSamp.indexOf(data)%>>
            <button type="button" onclick="decrement(<%=dataSamp.indexOf(data)%>)">-</button>
            <input name='igems' type="number" class="numberInput" step="0.5" />
            <button type="button" onclick="increment(<%=dataSamp.indexOf(data)%>)">+</button>
          </td>
          <td class="optionsBox hidden" id="optionBox_<%= dataSamp.indexOf(data) %>">
              <button type="button" id="editBtn_<%= dataSamp.indexOf(data) %>" onclick="editRow(<%= dataSamp.indexOf(data) %>)">Edit</button>
              <button type="button" id="saveBtn_<%= dataSamp.indexOf(data) %>" class="hidden" onclick="saveRow(<%= dataSamp.indexOf(data) %>)">Save</button>
              <button type="button" id="deleteBtn_<%= dataSamp.indexOf(data) %>" onclick="deleteRow(<%= dataSamp.indexOf(data) %>)">Delete</button>
          </td>
          
        <% }) %>
      </table>
    </div>
      <button type="submit" id="saveIgemsBtn" class="hidden save">Save</button>
    </form>

    <button id="addBtn" onclick="toggleHiddenDiv()">Add Gaim</button>

    <div class="hidden" id="addBox">
      <form action="/addGaim" method="post" id="addForm">
        <input name="category" type="text" placeholder="Category" />
        <input name="task" type="text" placeholder="Task" />
        <select name="status" id="statusSelect">
          <option value="On-Going" selected>On-going</option>
          <option value="Pending">Pending</option>
          <option value="Completed">Completed</option>
        </select>
        <input name="earned" type="text" placeholder="Earned" />

        <button class="save" type="submit">Save</button>
      </form>
    </div>
  </div>
    <script src="./script.js"></script>
  </body>
</html>
